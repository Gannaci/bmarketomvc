@using bmarketomvc.Helpers.Repositories;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model int
@inject ProductRepo productRepo

@{
    var products = await productRepo.GetAsync();
    var product = products.FirstOrDefault(x => x.Id == Model);
}
<partial name="/Views/Partials/_Banner.cshtml" />
<partial name="/Views/Partials/_Productinfo.cshtml" model="product" />
<partial name="/Views/Partials/_Buttoninfo.cshtml" />
<partial name="/Views/Partials/_Productdescription.cshtml" />
<partial name="/Views/Partials/_Related.cshtml" />
<partial name="/Views/Partials/_Imagesection.cshtml" />

